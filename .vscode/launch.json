	"version": "0.2.0",
	"configurations": [


        {
            "name": "cub3d", 
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/cub3d", //path to your programs exe and exe name
            "args": [ "maps/map_square.cub"
				
			],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }]
}